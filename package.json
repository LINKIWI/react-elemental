{
  "name": "react-elemental",
  "version": "1.1.0",
  "description": "Flat UI library for React",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf dist && rm -rf lib",
    "build": "babel src/ -d lib/",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint src test sample",
    "test": "jest test",
    "test:watch": "npm run test -- --watch",
    "cover": "npm run test -- --coverage",
    "coveralls": "npm run cover && cat coverage/lcov.info | coveralls",
    "prepublish": "npm run clean && npm run build && derive-pkg -d lib",
    "publish": "npm publish lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LINKIWI/react-elemental.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "color": "^2.0.1",
    "prop-types": "^15.5.10",
    "radium": "^0.19.6"
  },
  "devDependencies": {
    "@linkiwi/eslint-config": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "derive-pkg-cli": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-react": "^7.5.1",
    "html-loader": "^0.5.4",
    "html-webpack-inline-source-plugin": "^0.0.9",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.4",
    "nodemon": "^1.14.8",
    "pre-commit": "^1.2.2",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-elemental-fonts": "^0.0.1",
    "react-test-renderer": "^16.2.0",
    "sinon": "^4.1.3",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.0"
  },
  "peerDependencies": {
    "react": "^16.2.0"
  }
}
