{
  "name": "react-elemental",
  "version": "0.0.5",
  "description": "Flat UI library for React",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf dist && rm -rf lib",
    "build": "babel src/ -d lib/",
    "build-dist": "webpack --config config/webpack-lib.js",
    "build-dist-watch": "npm run build-dist -- --watch",
    "build-sample": "npm run build && webpack --config config/webpack-sample.js",
    "start": "webpack-dev-server --content-base sample/ --config config/webpack-sample.js --watch",
    "dev": "concurrently --kill-others --prefix name --prefix-colors cyan.bold,yellow.bold --names HTTP,JS 'npm run start' 'npm run build-dist-watch'",
    "lint": "eslint src test sample config",
    "test": "jest --verbose test",
    "test-watch": "npm run test -- --watch",
    "cover": "npm run test -- --coverage",
    "coveralls": "npm run cover && cat coverage/lcov.info | coveralls",
    "prepublish": "npm run clean && npm run build && derive-pkg -d lib",
    "publish": "npm publish lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LINKIWI/react-elemental.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@linkiwi/react-window-state": "^1.0.0",
    "color": "^2.0.0",
    "inline-style-prefixer": "^3.0.7",
    "prop-types": "^15.5.10",
    "radium": "^0.19.4",
    "react-icons": "^2.2.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.8",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "concurrently": "^3.5.0",
    "coveralls": "^2.13.1",
    "derive-pkg-cli": "^1.0.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-disable": "^0.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "html-loader": "^0.5.1",
    "html-webpack-inline-source-plugin": "^0.0.9",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.0.1",
    "nodemon": "^1.12.0",
    "pre-commit": "^1.2.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "sinon": "^3.2.1",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1"
  },
  "peerDependencies": {
    "react": "^15.6.1"
  }
}
